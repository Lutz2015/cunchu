/*global css begin*/

body {
    font-family: '微软雅黑', 'Verdana', '华文细黑';
    font-size: 14px;
    color: #333;
    -webkit-user-select: none;
    -moz-user-select: none;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
    -moz-user-focus: none;
    height: 100%;
    width: 100%;
    background-color: #f0f3f4;
    overflow: hidden;
}

.img {
    width: 100%;
    height: 100%;
    background-size: 100% 100%;
}

.fr {
    float: right;
}

.fl {
    float: left;
}

.hide {
    display: none;
}

.c-main {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

#head {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    font-size: 18px;
    color: #fff;
    text-align: center;
    background-color: #2E8FD4;
}

#aside {
    position: relative;
    z-index: 9;
    float: left;
    width: 160px;
    height: 100%;
    padding-top: 50px;
    background-color: #1D2124;
}

#content {
    height: 94%;
    margin-left: 160px;
    overflow-y: auto;
}

.add-color {
    background: #4077e9;
}

.loading-n {
    position: fixed;
    top: 40%;
    left: 50%;
    width: 80px;
    height: 80px;
    margin-left: -40px;
    text-align: center;
    border-radius: 5px;
    background-color: #fff;
    box-shadow: 0 0 20px #aaa;
    z-index: 10000;
}

.loading-img-n {
    margin-top: 10px;
    margin-bottom: 10px;
}

.loading-text-n {
    font-size: 12px;
}

.w-mask {
    position: absolute;
    z-index: 700;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    opacity: .5;
    overflow: hidden;
}

.w-mask.maskAnimate {
    animation: maskAnimate ease-out .2s;
    -webkit-animation: maskAnimate ease-out .2s;
}

@keyframes maskAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: .5;
    }
}

@-webkit-keyframes maskAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: .5;
    }
}

.c-error-message-box {
    position: absolute;
    top: 40%;
    width: 100%;
    text-align: center;
}

.c-error-message {
    display: inline-block;
    padding: 0 10px;
    height: 50px;
    font-size: 12px;
    line-height: 50px;
    text-align: center;
    background-color: #000;
    color: #fff;
    opacity: .8;
}