.c-shop-container {
    overflow: auto;
    width: 100%;
    height: 100%;
}

.c-shop-content {
    height: 64px;
    border-bottom: 1px solid #e7e7e7;
}

.c-shop-content:last-of-type {
    border: 0;
}

.c-shop-name {
    display: block;
    overflow: hidden;
    padding-top: 15px;
    height: 18px;
    line-height: 18px;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #333;
}

.c-shop-address {
    display: block;
    overflow: hidden;
    height: 15px;
    font-size: 11px;
    line-height: 15px;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #778187;
}

.c-shop-list {
    display: block;
    border-top: 1px solid #e7e7e7;
    border-bottom: 1px solid #e7e7e7;
    margin-top: 10px;
    padding-left: 15px;
    background-color: #fff;
}