.flex-container {
    display: -webkit-box;
    /* OLD - iOS 6-, Safari 3.1-6 */
    display: -moz-box;
    /* OLD - Firefox 19- (buggy but mostly works) */
    display: -ms-flexbox;
    /* TWEENER - IE 10 */
    display: -webkit-flex;
    /* NEW - Chrome */
    display: flex;
    /* or inline-flex*/
    /* NEW, Spec - Opera 12.1, Firefox 20+ */
}

.flex-auto {
    -webkit-box-flex: auto;
    -moz-box-flex: auto;
    -webkit-flex: auto;
    -ms-flex: auto;
    flex: auto;
}

.flex-auto1 {
    -webkit-box-flex: 1;
    /* OLD - iOS 6-, Safari 3.1-6 */
    -moz-box-flex: 1;
    /* OLD - Firefox 19- */
    -webkit-flex: 1;
    /* Chrome */
    -ms-flex: 1;
    /* IE 10 */
    flex: 1;
}

.flex-auto2 {
    -webkit-box-flex: 2;
    -moz-box-flex: 2;
    -webkit-flex: 2;
    -ms-flex: 2;
    flex: 2;
}

.flex-auto3 {
    -webkit-box-flex: 3;
    -moz-box-flex: 3;
    -webkit-flex: 3;
    -ms-flex: 3;
    flex: 3;
}


/*非box方式, 一行，超长截断，配合width使用*/

.flex-line-normal-elli {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


/*非box方式, 一行，超出省略号结尾*/

.flex-line-normal-clip {
    overflow: hidden;
    text-overflow: clip;
    white-space: nowrap;
}


/*box 一行，超出省略号结尾*/

.flex-line-clamp1 {
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    display: -webkit-box;
}

.flex-line-clamp2 {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    display: -webkit-box;
}

.flex-line-clamp3 {
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    display: -webkit-box;
}

.flex-truncate-clamp1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.flex-wid100-elli {
    display: inline-block;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


