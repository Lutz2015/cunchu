body {
    background: #f0f3f4;
}

table, thead, tbody, tr, td, th, div, span, i, input {
    margin: 0;
    padding: 0;
}

.hide {
    display: none;
}

.c-mask {
    position: fixed;
    z-index: 999;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    opacity: .5;
    overflow: hidden;
}

.c-mask.upload {
    z-index: 1001;
}

.c-loading {
    text-align: center;
}